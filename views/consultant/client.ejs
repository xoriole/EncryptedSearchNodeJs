<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/header %>
        <% include ../partials/nav %>

        <div class="container">
            <div class="row">

                <div class="col-lg-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <b><i class='fa fa-file'></i> <i class='fa fa-plus-square'></i> Add Records</b>
                        </div>
                        <div class="panel-body">
                            <div class="alert alert-success alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <strong>Nothing here now</strong> 
                            </div>
                            <form method="post" action="/consultant/add_data/<%= clientId %>" name="add_data_form">
                                <div class="form-group">
                                    <label for="inputName">Name of client</label>
                                    <input type="text" class="form-control form-control-static" id="inputName" name="name" placeholder="full name " value="<%= clientInfo.name%>" disabled="disabled">
                                    <input type="hidden" name="id" value="<%= clientId %>" required/>
                                </div>
                                <div class="form-group">
                                    <label for="inputDate">Select date</label>
                                    <input type="date" class="form-control" id="inputDate" name="date" placeholder="date" value="" required>
                                </div>
                                <div class="form-group">
                                    <label for="inputParticulars">Particulars</label>
                                    <textarea class="form-control" id="inputParticulars" name="particulars" placeholder="Record information" required>teset</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="inputUsername">Amount</label>
                                    <div class="input-group">
                                      <span class="input-group-addon">$</span>
                                      <input type="text" name='amount' class="form-control" aria-label="Amount" required>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info">Add Record</button>
                            </form>
                        </div>
                    </div>
                </div> <!-- left sidebar -->

                <div class="col-lg-8">
                    <div class="well well-sm alert-warning">
                        <b>Client : <%= clientInfo.name%> (<%= clientInfo.username %>)</b> 
                        <a class="btn btn-xs btn-danger pull-right" href="/del_client/<%= clientId%>">Remove client </a> 
                    </div>
                    <div class="panel panel-info">
                        <div class="panel-heading"><b>Client Data Records (<%= data.length%>)</b></div>
                        <table class="panel-body table table-striped table-bordered">
                          <thead>
                            <tr>
                              <th>Date</th>
                              <th>Particulars</th>
                              <th>Amount ($)</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% if(data.length!=0){%>
                                <% for(var i=0;i<data.length;i++){%>
                                    <tr>
                                      <th scope="row"><%= data[i].date.toISOString().slice(0, 10)%></th>
                                      <td style='max-width:300px'><%= data[i].particulars %></td>
                                      <td><%= data[i].amount %></td>
                                    </tr>
                                <% } %> 
                            <% } else{ %>
                                <tr>
                                  <th scope="row">---</th>
                                  <td>---</td>
                                  <td>---</td>
                                </tr>
                            <% } %>
                          </tbody>
                        </table>
                    </div>


                </div> <!-- Main Content -->

            </div>
        </div>
        <% include ../partials/footer %>
        <% include ../partials/jsdefaults %>
    </body>
</html>
